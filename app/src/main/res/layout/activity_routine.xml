<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ScrollView_scroll"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Routine"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/LinearLayout_linear"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        //루틴 카드뷰
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height= "wrap_content"
            android:layout_margin="20dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="18dp"
            app:contentPadding="20dp">


            <LinearLayout
                android:id="@+id/LinearLayout_Routine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:animateLayoutChanges="true"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="53dp"
                    android:text="Road To Perfect Day 🛣"
                    android:textColor="#3C5A93"
                    android:textSize="30sp"
                    android:textStyle="bold" />



                //루틴 리스트 (체크박스) 스크롤
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:id="@+id/LinearLayout_routineList_viertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="visible"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/LinearLayout_routineList_horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="3"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:textSize="20dp"
                                android:text="09:00"/>

                            <CheckBox
                                android:id="@+id/check1_1"
                                android:layout_weight="2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="drink a glass of water"
                                android:textSize="20dp" />

                        </LinearLayout>

                    </LinearLayout>

                </ScrollView>

                // 수정중

                <Button
                    android:id="@+id/Button_routineAdd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:backgroundTint="#3C5A93"
                    android:text="Add" />

                <Button
                    android:id="@+id/Button_routineDelete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_gravity="center"
                    android:backgroundTint="#DB4455"
                    android:text="Delete"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/Button_routineAdd" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>